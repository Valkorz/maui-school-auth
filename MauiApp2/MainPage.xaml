<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:MauiApp2.ViewModels"
             x:Class="MauiApp2.MainPage"
             Shell.NavBarIsVisible="False">

    <ContentPage.BindingContext>
        <vm:MainViewModel />
    </ContentPage.BindingContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <VerticalStackLayout Grid.Row="0" HorizontalOptions="Center">
            <Image Source="logo_facens.png" Aspect="AspectFit" HeightRequest="96"/>
            <ScrollView Orientation="Horizontal">
                <HorizontalStackLayout Spacing="3">
                    <Border Style="{StaticResource TopViewBorder}">
                        <Button x:Name="Login" Text="Login" SemanticProperties.Hint="next page" Clicked="OnNextPageClicked" HorizontalOptions="Fill" BackgroundColor="Transparent" BorderColor="Transparent" />
                    </Border>
                    <Border Style="{StaticResource TopViewBorder}">
                        <Button Text="Inovação" SemanticProperties.Hint="next page" Clicked="OnNextPageClicked" HorizontalOptions="Fill" BackgroundColor="Transparent"  BorderColor="Transparent"/>
                    </Border>
                    <Border Style="{StaticResource TopViewBorder}">
                        <Button Text="Eventos" SemanticProperties.Hint="next page" Clicked="OnNextPageClicked" HorizontalOptions="Fill" BackgroundColor="Transparent"  BorderColor="Transparent" />
                    </Border>
                    <Border Style="{StaticResource TopViewBorder}">
                        <Button Text="Sobre" SemanticProperties.Hint="next page" Clicked="OnNextPageClicked" HorizontalOptions="Fill" BackgroundColor="Transparent"   BorderColor="Transparent"/>
                    </Border>
                </HorizontalStackLayout>
            </ScrollView>
        </VerticalStackLayout>

        <CarouselView Grid.Row="1" x:Name="ImageCarousel" ItemsSource="{Binding ImageSources}"
                      HorizontalOptions="Fill" VerticalOptions="Fill">
            <CarouselView.ItemTemplate>
                <DataTemplate>
                    <Image Source="{Binding ImageSource}" 
                           Aspect="AspectFill" 
                           HorizontalOptions="Fill" 
                           VerticalOptions="Fill"/>
                </DataTemplate>
            </CarouselView.ItemTemplate>
        </CarouselView>
    </Grid>

</ContentPage>

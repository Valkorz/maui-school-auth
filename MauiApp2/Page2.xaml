<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp2.Page2">

    <ContentPage.Resources>
        <Style x:Key="FlatContentBox" TargetType="Border">
            <Setter Property="BackgroundColor" Value="{AppThemeBinding Light=White, Dark=#333333}" />
            <Setter Property="Stroke" Value="Transparent"/>
            <Setter Property="StrokeThickness" Value="0"/>
            <Setter Property="Opacity" Value="0.9"/>
        </Style>
    </ContentPage.Resources>

    <Grid>
        <Image Source="facens1.jpg" Aspect="AspectFill" HorizontalOptions="Fill" VerticalOptions="Fill"/>
        <Border
        Stroke="Transparent"
        StrokeThickness="2.5"
        Padding="10"
        HorizontalOptions="Center"
        VerticalOptions="Center"
        MinimumWidthRequest="350"
        MinimumHeightRequest="500"
        MaximumWidthRequest="450"
        MaximumHeightRequest="650"
        Style="{StaticResource FlatContentBox}"
        Opacity="0.8">

            <Border.StrokeShape>
                <RoundRectangle CornerRadius="10,10,10,10"></RoundRectangle>
            </Border.StrokeShape>
            <Border.Shadow>
                <Shadow
                Brush="Black"
                Opacity="0.0"
                Radius="3"/>
            </Border.Shadow>

            <Grid RowDefinitions="*,Auto">
                <StackLayout
                    HorizontalOptions="Center"
                    Spacing="10"
                    Grid.Row="0">
                    <Image
                    Source="logo_facens.png"
                    Aspect="AspectFit"
                    WidthRequest="128"
                    HeightRequest="128"
                    SemanticProperties.Description="FACENS" />

                    <Label
                    Text="Acesso acadÃªmico"
                    FontAttributes="Bold"
                    FontSize="Medium"
                    FontFamily=""
                    Margin="15"
                    SemanticProperties.HeadingLevel="Level2"/>

                    <Entry
                    x:Name="entry_ID"
                    Placeholder="000000"
                    PlaceholderColor="Gray"
                    FontSize="16"
                    Keyboard="Numeric"
                    MaxLength="6"
                    ReturnType="Send"
                    Completed="OnCompletion"
                    Unfocused="OnCompletion"
                    HorizontalOptions="FillAndExpand"></Entry>

                    <Entry
                    x:Name="entry_pass"
                    Placeholder="Senha"
                    PlaceholderColor="Gray"
                    FontSize="16"
                    Keyboard="Text"
                    MaxLength="15"
                    IsPassword="True"
                    ReturnType="Send"
                    Completed="OnSubmitClicked"
                    HorizontalOptions="FillAndExpand"></Entry>


                </StackLayout>
                <StackLayout 
                    VerticalOptions="Center"
                    Grid.Row="1">

                    <Button
                    x:Name="btn_submit"
                    Text="Enviar"
                    Style="{StaticResource ButtonStyle1}"
                    Clicked="OnSubmitClicked"
                    />
                </StackLayout>
            </Grid>
        </Border>
    </Grid>

</ContentPage>

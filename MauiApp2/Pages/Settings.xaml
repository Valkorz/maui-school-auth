<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="MauiApp2.Pages.Settings">

    <ContentPage.Resources>
        <!-- Top rectangle decor-->
        <Style x:Key="TopBorderDesign" TargetType="Border">
            <Setter Property="MinimumHeightRequest" Value="100"/>
            <Setter Property="Background">
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                    <GradientStop Color="#aea6f2"
                    Offset="0.1" />
                    <GradientStop Color="#4568e4"
                    Offset="0.8" />
                </LinearGradientBrush>
            </Setter>
        </Style>
        
        <!-- Sidebar button style-->
        <Style x:Key="SidebarBox_1" TargetType="Border">
            <Setter Property="StrokeThickness" Value="0.8"/>
            <Setter Property="BackgroundColor" Value="Transparent"/>
            <Setter Property="Padding" Value="2"/>

            <Setter Property="Stroke">
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                    <GradientStop Color="Transparent"
                    Offset="0.1" />
                    <GradientStop Color="Black"
                    Offset="0.8" />
                </LinearGradientBrush>
            </Setter>

            <Setter Property="StrokeShape">
                <RoundRectangle CornerRadius="0,6,0,6"/>
            </Setter>

            <Setter Property="Background">
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,6">
                    <GradientStop Color="Transparent"
                    Offset="0.1" />
                    <GradientStop Color="DarkGray"
                    Offset="0.8" />
                </LinearGradientBrush>
            </Setter>
        </Style>
        
        <!-- Image circle style -->
        <Style x:Key="ImageCircleBorder" TargetType="Border">
            <Setter Property="BackgroundColor" Value="Transparent"/>
            <Setter Property="Stroke" Value="Transparent"/>
            <Setter Property="StrokeShape">
                <RoundRectangle CornerRadius="90,90,90,90" HeightRequest="96"/>
            </Setter>

        </Style>
    </ContentPage.Resources>

    <Grid RowDefinitions="auto,*">
        <Border Grid.Row="0" Style="{StaticResource TopBorderDesign}"/>
        <Grid Grid.Row="1">
            <!-- Content -->
            
            <!-- Profile tab -->
            <Border x:Name="Profile" IsVisible="True" Padding="35">
                <Grid RowDefinitions="auto, *">
                    <VerticalStackLayout Margin="20" HorizontalOptions="Center" Spacing="10">
                        <Label
                        Text="Perfil"
                        FontSize="Title"
                        FontAttributes="Bold"
                        HorizontalTextAlignment="Center"/>
                        <Border Style="{StaticResource ImageCircleBorder}" >
                            <Grid>
                                <Image Source="puffin.png" Aspect="AspectFit" HeightRequest="160"/>
                                <Button HeightRequest="160" BackgroundColor="Transparent"/>
                            </Grid>
                        </Border>
                        <Label
                        Text="USERNAME"
                        FontSize="Small"
                        FontAttributes="Bold"
                        HorizontalTextAlignment="Center"/>
                    </VerticalStackLayout>
                <Grid Grid.Row="1" ColumnDefinitions="*,*" ColumnSpacing="10">
                    <VerticalStackLayout Grid.Column="0" VerticalOptions="Center" Spacing="5">
                            <Label Text="Nome" FontAttributes="Bold"/>
                            <Entry Placeholder="Seu Nome"/>
                            <Label Text="Registro Acadêmico" FontAttributes="Bold"/>
                            <Entry Placeholder="000000" IsEnabled="False"/>
                            <Label Text="Senha" FontAttributes="Bold"/>
                            <Entry Placeholder="Senha" IsEnabled="False" IsPassword="True"/>
                        </VerticalStackLayout>
                    <VerticalStackLayout Grid.Column="1" VerticalOptions="Center" Spacing="5">
                            <Label Text="Email" FontAttributes="Bold"/>
                            <Entry Placeholder="Email" IsEnabled="False"/>
                            <Label Text="Data de Início" FontAttributes="Bold"/>
                            <DatePicker IsEnabled="False"/>
                        </VerticalStackLayout>
                </Grid>
                </Grid>
            </Border>

            <Border x:Name="Appearance" IsVisible="False">
                <VerticalStackLayout Margin="20" HorizontalOptions="Center">
                    <Label
            Text="Customização"
            FontSize="Title"
            FontAttributes="Bold"
            />
                </VerticalStackLayout>
            </Border>

            <Border x:Name="Notifications" IsVisible="False">
                <VerticalStackLayout Margin="20" HorizontalOptions="Center">
                    <Label
            Text="Notificações"
            FontSize="Title"
            FontAttributes="Bold"
            />
                </VerticalStackLayout>
            </Border>

            <!-- Sidebar button -->
            <Button Text="☰"
            Clicked="OnToggleSidebarClicked"
            HorizontalOptions="Start" 
            VerticalOptions="Start"
            Margin="10"
            FontSize="Large"
            FontAttributes="Bold"
            Style="{StaticResource ButtonStyle1}"/>

            <!-- Sliding sidebar -->
            <Border x:Name="Sidebar"
            MinimumWidthRequest="250" 
            Padding="10" 
            BackgroundColor="{AppThemeBinding Light=White, Dark=#2c2c2c}"
            HorizontalOptions="Start"
            TranslationX="-260">
                <VerticalStackLayout Spacing="5">
                    <HorizontalStackLayout Spacing="5">
                        <Button
                    Text="◄"
                    Style="{StaticResource ButtonStyle1}"
                    Margin="5"
                    FontSize="Medium"
                    FontAttributes="Bold"
                    VerticalOptions="Center"
                    HorizontalOptions="Center"
                    Clicked="OnToggleSidebarClicked"
                />
                        <Label Text="Opções" FontSize="Large" FontAttributes="Bold" Padding="5"/>
                    </HorizontalStackLayout>
                    <Border Style="{StaticResource SidebarBox_1}">
                        <Button
                AutomationId="0"
                Text="Perfil"
                BackgroundColor="Transparent"
                BorderColor="Transparent"
                Clicked="OnSettingsSelectPage"
                />
                    </Border>
                    <Border Style="{StaticResource SidebarBox_1}">
                        <Button
                AutomationId="1"
                Text="Aparência"
                BackgroundColor="Transparent"
                BorderColor="Transparent"
                Clicked="OnSettingsSelectPage"
                />
                    </Border>
                    <Border Style="{StaticResource SidebarBox_1}">
                        <Button
                AutomationId="2"
                Text="Notificações"
                BackgroundColor="Transparent"
                BorderColor="Transparent"
                Clicked="OnSettingsSelectPage"
                />
                    </Border>
                </VerticalStackLayout>
            </Border>
        </Grid>
    </Grid>
</ContentPage>